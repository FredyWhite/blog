<!DOCTYPE html>
<html>
  <head>
    <title>Blanquito</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice" style="<%= "display:none;" if notice.nil? %>"><%= notice %></p>
    <p class="alert" style="<%= "display:none" if alert.nil? %>"><%= alert %></p>
    <header>
        <nav>
          <ul class="nav nav-tabs">
            <li>
              <%= link_to  "home", root_path %>
            </li>
            <% if user_signed_in? %>
                <li>
                  <%= link_to  "Editar perfil", edit_user_session_path(current_user)  %>
                </li>
                <li><%= link_to  "Cerrar sesion", destroy_user_session_path,method: :delete %> </li>
            <% else %>
                <li>
                <%= link_to "Ingresar", new_user_session_path %>
                </li>
                <li>
                <%= link_to "Registrarse", new_user_registration_path %>
                </li>
            <% end %>
          </ul>
        </nav>
    </header>
    <div class="row">
        <div class="col-md-6" style="background:red; height:200px; width:100%;"></div>
        <div class="col-md-6" style="background:green; height:200px; width:100%;"></div>
    </div>
    <%= yield %>
  </body>
</html>
